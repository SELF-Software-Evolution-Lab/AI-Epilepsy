{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2021",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./src",  
    "paths": {
      "@app/*"       : ["app/*"],
      "@client/*"    : ["client/*"],
      "@config/*"    : ["config/*"],
      "@core/*"   : ["core/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}